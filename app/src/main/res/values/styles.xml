<resources>

    <style name="MaterialDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:textColor">@color/red</item>
        <item name="android:colorAccent">@color/red</item>
    </style>

    <style name="HoloDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/greyMaterialDark</item>
    </style>

    <style name="MaterialTranslucent" parent="android:Theme.Material.NoActionBar.TranslucentDecor">
        <item name="android:colorPrimary">@color/greyMaterialDark</item>
    </style>

    <style name="HoloTranslucent" parent="android:Theme.Holo.NoActionBar.TranslucentDecor">
        <item name="android:windowBackground">@color/greyMaterialDark</item>
    </style>

    <style name="HoloWithoutBar" parent="android:Theme.Holo">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/greyMaterialDark</item>
    </style>

    <style name="Material" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/red</item>
        <item name="android:colorPrimaryDark">@color/redDark</item>
    </style>

    <style name="Holo" parent="android:Theme.Holo">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:windowBackground">@color/greyMaterialDark</item>
    </style>

</resources>